@using ArgentoApp.Frontend.Mvc.Models.Other
<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Argento Admin Panel</title>
  @await Html.PartialAsync("_StylesPartial")
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">
    @await Html.PartialAsync("_PreloaderPartial")
    @await Html.PartialAsync("_NavbarPartial")
    @await Html.PartialAsync("_MainSidebarPartial")

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
      @{
        ContentDataModel contentDataModel = new()
      {
        PageHeader = ViewData["PageHeader"]?.ToString() ?? string.Empty, // Null kontrolü eklendi
        ShowButton = ViewData["ShowButton"] != null && (bool)ViewData["ShowButton"], // Null kontrolü eklendi
        ButtonTitle = ViewData["ButtonTitle"]?.ToString() ?? string.Empty, // Null kontrolü eklendi
        ButtonLink = ViewData["ButtonLink"]?.ToString() ?? string.Empty // Null kontrolü eklendi
      };
      }
      @await Html.PartialAsync("_ContentHeaderPartial", contentDataModel)

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          @RenderBody()
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    @await Html.PartialAsync("_FooterPartial")
  </div>
  <!-- ./wrapper -->
  @await Html.PartialAsync("_ScriptsPartial")
  @RenderSection("Scripts", false)
</body>

</html>
