<script>
    $(function () {
        var table = $("#my-data-table");

        // Eğer daha önce bir DataTable başlatılmışsa, yok et ve tekrar başlat
        if ($.fn.DataTable.isDataTable(table)) {
            table.DataTable().clear().destroy();
        }

        // DataTable'ı başlat
        table.DataTable({
            "responsive": true,
            "lengthChange": true,
            "lengthMenu": [5, 10, 20, 50, 100],
            "autoWidth": true
        });
    });
</script>