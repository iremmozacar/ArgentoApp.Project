@model ArgentoApp.Frontend.Mvc.Models.Identity.LoginViewModel

<!doctype html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Argento</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="assets/css/flaticon.css">
    <link rel="stylesheet" href="assets/css/slicknav.css">
    <link rel="stylesheet" href="assets/css/animate.min.css">
    <link rel="stylesheet" href="assets/css/magnific-popup.css">
    <link rel="stylesheet" href="assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="assets/css/themify-icons.css">
    <link rel="stylesheet" href="assets/css/slick.css">
    <link rel="stylesheet" href="assets/css/nice-select.css">
    <link rel="stylesheet" href="assets/css/style.css">
</head>

<body>
    <main>
        <!-- Login Form Area -->
        <section class="login_part section_padding">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Yeni Hesap Oluşturma Alanı -->
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_text text-center">
                            <div class="login_part_text_iner">
                                <h2>Yeni misiniz?</h2>
                                <p>Eğer henüz bir hesabınız yoksa, hemen bir hesap oluşturun.</p>
                                <a href="#" class="btn_3">HESAP OLUŞTUR</a>
                            </div>
                        </div>
                    </div>
                    <!-- Giriş Formu Alanı -->
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <h3>Hoş Geldiniz! <br>
                                    Lütfen şimdi giriş yapın</h3>
                                <form asp-area="" asp-controller="Account" asp-action="Login" method="post"
                                    class="row contact_form" novalidate="novalidate">
                                    <!-- ReturnUrl gizli alanı -->
                                    <input type="hidden" asp-for="ReturnUrl" />
                                    <div class="col-md-12 form-group p_star">
                                        <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <input asp-for="Password" type="password" class="form-control"
                                            placeholder="Parola" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <div class="creat_account d-flex align-items-center">
                                            <input type="checkbox" id="f-option" name="RememberMe">
                                            <label for="f-option">Beni Hatırla</label>
                                        </div>
                                        <button type="submit" value="submit" class="btn_3">GİRİŞ YAP</button>
                                        <a class="lost_pass" href="#">Şifrenizi mi unuttunuz?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Login Form Area End -->
    </main>
</body>

</html>